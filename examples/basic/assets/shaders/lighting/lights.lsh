struct directional_light {
    vec4 color;
    vec4 direction;
};

struct point_light {
    vec4 color;
    vec4 position;
};

struct spot_light {
    vec4 color;
    vec4 position;
    vec4 direction;
    vec4 angles;
};

layout (std140, binding = 1) uniform lights_ubo
{
    point_light point_lights[16];
    spot_light spot_lights[16];
    directional_light directional_light;
} lights;